<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false">

    <fragment
        android:id="@+id/cadetListFragmentLand"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/cadet_list_fragment"
        android:name="com.won_tonsoup.uniformmarker.ListActivity"
        />

    <fragment
        android:id="@+id/markingFragmentLand"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        tools:layout="@layout/marking_fragment"
        android:name="com.won_tonsoup.uniformmarker.DetailActivity"
        />

</LinearLayout>